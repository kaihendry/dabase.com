	class Listsort:
    def unique(self, list):
        """ Return (sorted) unique elements """
        d = {}
        for x in list:
            d[x] = 1
        subset = d.keys()
        subset.sort(self.bigstrings)
        return subset

    def bigstrings(self, x, y):
        """ comparison function to return largest string """

        if len(x) < len(y):
            return 1

        if len(x) > len(y):
            return -1

        if len(x) == len(y):
            return 0


	if __name__ == '__main__':
    x = Listsort()
    l = ['cows', 'apples', 'it', 'bureaucracy']
    print x.unique(l)
